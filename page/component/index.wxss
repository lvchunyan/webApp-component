/* page/component/index.wxss */

.index-hd {
  text-align: center;
  padding: 100rpx 70rpx;
}

.index-bd {
  text-align: center;
  padding: 0rpx 30rpx;
}

.index-logo {
  width: 120rpx;
  height: 120rpx;
}

.index-desc {
  font-size: 28rpx;
  color: #888;
  margin-top: 20rpx;
}

.kind-list {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
}

.kind-list-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.kind-list-text {
  margin-top: 15rpx;
}

.kind-list-img {
  width: 80rpx;
  height: 80rpx;
}
.navigator{
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.kind-list-item-show{
  opacity: .2;
}
.navigator-box{
  opacity: 0;
  height: 0;
  overflow: hidden
}
.navigator-box-show{
  opacity: 1;
  height: auto;
}