<!--page/component/pages/picker/picker.wxml-->
<import src="../../../common/head.wxml" />
<import src="../../../common/foot.wxml" />

<view>
  <template is="head" data="{{title: 'picker'}}"></template>
  <view>
    <view class='page-body'>
      <view class='page-body-title'>地区选择器</view>
      <view class='page-body-item'>
        <view>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view>
              当前选择：{{array[index]}}
            </view>
          </picker>
        </view>
      </view>
    </view>
    <view class='page-body'>
      <view class='page-body-title'>多选选择器</view>
      <view class='page-body-item'>
        <view>
          <picker mode="multiSelector" bindchange="bindMultiChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
            <view>
              当前选择：{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
            </view>
          </picker>
        </view>
      </view>
    </view>
     <view class='page-body'>
      <view class='page-body-title'>时间选择器</view>
      <view class='page-body-item'>
        <view>
          <picker bindchange="bindTimeChange" mode="time" value="{{time}}" start="09:01" end="21:01">
            <view>
              当前选择：{{time}}
            </view>
          </picker>
        </view>
      </view>
    </view>
     <view class='page-body'>
      <view class='page-body-title'>日期选择器</view>
      <view class='page-body-item'>
        <view>
          <picker mode="date" bindchange="bindDateChange" value="{{date}}" start="2015-09-01" end="2017-09-01">
            <view>
              当前选择：{{date}}
            </view>
          </picker>
        </view>
      </view>
    </view>
  </view>
  <template is="foot" />
</view>