<!--page/component/pages/input/input.wxml-->
<import src="../../../common/head.wxml" />
<import src="../../../common/foot.wxml" />

<view>
  <template is="head" data="{{title: 'input'}}"></template>
  <view>
    <view class='weui-title'>可以自动聚焦的input</view>
    <view class='weui-input'>
      <input auto-focus placeholder='将会获取焦点'></input>
    </view>
  </view>
  <view>
    <view class='weui-title'>控制最大输入长度的input</view>
    <view class='weui-input'>
      <input maxlength="10" placeholder='最大输入长度为10'></input>
    </view>
  </view>
  <view>
    <view class='weui-title'>实时获取输入值：{{inputValue}}</view>
    <view class='weui-input'>
      <input bindinput="bindKeyInput" placeholder='输入同步到view中'></input>
    </view>
  </view>
  <view>
    <view class='weui-title'>控制输入的input</view>
    <view class='weui-input'>
      <input bindinput="bindReplaceInput" placeholder='连续的两个1会变成2'></input>
    </view>
  </view>
  <view>
    <view class='weui-title'>控制键盘的input</view>
    <view class='weui-input'>
      <input bindinput="bindHideKeyboard" placeholder='输入123自动收起键盘'></input>
    </view>
  </view>
  <view>
    <view class='weui-title'>数字输入的input</view>
    <view class='weui-input'>
      <input type="number" placeholder='这是一个数字输入框'></input>
    </view>
  </view>
  <view>
    <view class='weui-title'>密码输入的input</view>
    <view class='weui-input'>
      <input type="number" password placeholder='这是一个密码输入框'></input>
    </view>
  </view>
  <view>
    <view class='weui-title'>控制占位符颜色的input</view>
    <view class='weui-input'>
      <input type="number" placeholder-style="color:#F76260" placeholder='占位符字体是红色的'></input>
    </view>
  </view>
  <template is="foot" />
</view>